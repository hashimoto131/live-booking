<!DOCTYPE html>
<html>
<head>
  <title>LiveBooking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">

		<div id="bgHeader">
			<div id="header" class="clearfix">
				<h1><%= link_to 'LIVE BOOKING', root_path, method: :get %></h1>
				<ul id="gNavi" class="clearfix">
					<li class="firstItem"><%= link_to '投稿する', new_article_path, method: :get %></li>
					<li class="lastItem"><%= link_to 'ライブを探す', search_articles_path, method: :get %></li>
				</ul>
			</div>
		</div>

    <div id="bgColor">

		  <div id="mainContents" class="clearfix">
			 	<%= yield %>
	    </div>

			<div id="footer">
				<p id="copyright">Copyright hashimoto All Rights Reserved.</p>
			</div>

    </div>
	</div>
</body>
</html>
